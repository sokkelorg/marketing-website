<style>
  main {
    --gap: 10rem;
    background: #ffffff;
    display: flex;
    flex-direction: column;

    margin-inline: auto;
    padding: 1.5rem;

    font-size: 1.5rem;
    line-height: 2rem;
    gap: var(--gap);
  }

  @media (min-width: 450px) {
    main {
      margin-block: 2rem;
      border-radius: 24px;
      max-width: 393px;
    }
  }

  section.hero {
    min-height: calc(100dvh - var(--gap) - 5rem);

    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  section.hero > .content {
    display: grid;
    gap: 1rem;
  }

  section.hero > .content > p {
    margin: 0;
  }

  section.hero > .content > h1 {
    font-size: 2.5rem;
    font-weight: 900;
    line-height: 2.9rem;
    margin-block: 0;

    opacity: 0;
    transition: opacity 0.5s ease;
    text-wrap: pretty;
  }

  section.hero > .content > h1.visible {
    opacity: 1;
  }

  section.hero > .content p {
    font-size: 0.875rem;
    line-height: 1.25rem;
    padding: 0;
  }

  section.hero > .actions {
    display: flex;
    gap: 1rem;
  }

  section.hero > .actions > .refresh-button {
    font-family: inherit;
    background: none;
    border: none;
    color: hsl(240, 100%, 50%);
    cursor: pointer;
    font-size: 0.875rem;
    margin: 0;
    padding: 0;
    text-decoration: underline;
  }

  section.hero > .actions > .refresh-button:hover {
    text-decoration: none;
  }

  section.hero > .actions > kbd {
    background-color: #e9e9e9;
    border-radius: 4px;

    padding-block: 0.5rem;
    padding-inline: 1rem;
    line-height: normal;

    display: inline-flex;
    align-items: center;
    font-size: 0.875rem;
    justify-content: center;
    gap: 1px;
    color: #000;
    user-select: none;
    cursor: pointer;
  }

  section.hero > .actions > kbd > .symbol {
    font-size: 18px;
  }

  p.statement {
    font-weight: bold;
  }

  .logo-symbol {
    max-width: 40px;
  }

  .logo {
    width: 100%;
    height: 100%;
    margin-bottom: 2rem;
  }

  .illustration {
    display: block;
    align-self: center;
    width: 100%;
    max-width: 445px;
    margin-block: 1rem;
  }

  .illustration.lambo-tape {
    max-width: 80%;
  }

  .illustration.arrow-down {
    max-width: 130px;
    margin-block-start: 5rem;
    margin-block-end: 0;
  }

  .intro span {
    color: #888888;
  }

  section.introduction {
    margin-top: 10rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  section.introduction > .caption {
    font-size: 0.875rem;
    line-height: 1.25rem;
    text-wrap: pretty;
  }

  section.status {
    font-size: 0.875rem;
    line-height: 1.25rem;
  }

  section.status .marquee-container {
    overflow: hidden;
    margin-inline: -1.5rem;
    padding-block: 1rem;
  }

  section.status .marquee-container > .marquee {
    background-color: hsl(240, 100%, 50%);
    color: white;
    transform: rotate(-6deg);
    font-size: 1rem;
    font-weight: 600;
    margin-inline: -2rem;
    margin-block: 1rem;

    --gap: 2rem;
    position: relative;
    display: flex;
    overflow: hidden;
    user-select: none;
    gap: var(--gap);
  }

  section.status > .marquee-container > .marquee > .marquee-content {
    flex-shrink: 0;
    display: flex;
    justify-content: space-around;
    gap: var(--gap);
    min-width: 100%;
    animation: scroll 10s linear infinite;
  }

  /* remove margin right on the last marquee item */
  section.status
    > .marquee-container
    > .marquee
    > .marquee-content
    > li:last-child {
    margin-inline-end: -2.5rem;
  }

  section.status > .button {
    margin-block-start: 2rem;
  }

  section.status > p {
    margin-block-start: 2.5rem;
    margin-block-end: 0;
  }

  section.status > ul {
    list-style-type: none;
    margin-block-start: 0.5rem;
    padding-inline-start: 1.2rem;
  }

  section.status > ul > li::before {
    content: "ðŸ”¹ "; /* Add blue diamond emoji and a space */
    margin-left: -1.5em; /* Pull the emoji back to align properly */
  }

  section.about {
    font-size: 1rem;
    line-height: 1.5rem;
  }

  section.about > h2 {
    font-size: 1rem;
    font-weight: 800;
    line-height: 1.5rem;
  }

  section.about .team {
    border-radius: 0.5rem;
  }

  .button {
    display: block;
    padding: 10px 16px;
    font-size: 16px;
    font-weight: 500;
    text-align: center;
    color: white;
    background-color: #000000;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    text-decoration: none;
  }

  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% - var(--gap)));
    }
  }

  @media (prefers-reduced-motion: reduce) {
    /* If user prefers reduced motion, remove both marquee and the
* the TLDR text, showing only the list */
    .marquee {
      display: none;
    }

    section.status > p {
      display: none;
    }
  }
</style>
