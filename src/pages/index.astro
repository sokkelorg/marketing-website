<style>
  main {
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: calc(var(--spacing) * 32);
  }
</style>

<style>
  .card {
    border-radius: var(--radius-2xl);
    padding: calc(var(--spacing) * 6);
  }

  #hero {
    width: 100%;
    display: grid;
    gap: calc(var(--spacing) * 8);

    @media (min-width: 40rem) {
      grid-template-columns: 1fr 1fr;
      height: 65dvh;
      max-height: 65dvh;
    }

    #headline {
      display: flex;
      flex-direction: column;
      gap: calc(var(--spacing) * 8);
      align-items: center;
      text-align: center;

      @media (min-width: 40rem) {
        align-items: start;
        justify-content: space-between;
        text-align: start;
      }

      h1 {
        margin: 0;
        font-weight: var(--font-weight-extrabold);
        font-size: var(--text-6xl-font-size);
        line-height: var(--text-6xl-line-height);

        background-clip: text;
        color: transparent;
        background-image: url('/assets/flow-title.gif');
      }

      .subtitle {
        display: flex;
        flex-direction: column;
        gap: calc(var(--spacing) * 8);
        align-items: center;
        @media (min-width: 40rem) {
          align-items: start;
        }

        h2 {
          margin: 0;
          font-weight: var(--font-weight-medium);
          font-size: var(--text-xl-font-size);
          line-height: var(--text-xl-line-height);
        }
      }
    }

    #stacky-intro {
      display: flex;
      align-items: center;
      justify-content: center;

      .content {
        max-width: 18rem;
        display: flex;
        flex-direction: column;
        gap: calc(var(--spacing) * 6);
        align-items: center;

        .stacky {
          width: 75%;
          @media (min-width: 40rem) {
            width: 100%;
          }
        }

        .speech-bubble {
          display: flex;
          flex-direction: column;
          align-items: center;

          .arrow {
            margin-bottom: -8px;
          }

          .message {
            margin: 0;
            background-color: var(--color-gray-100);
          }
        }
      }
    }
  }

  .pitch {
    width: 100%;

    .content {
      padding-block: calc(var(--spacing) * 32);
      padding-inline: calc(var(--spacing) * 6);

      text-align: center;
      display: flex;
      flex-direction: column;
      gap: calc(var(--spacing) * 6);
      align-items: center;

      .title {
        margin: 0;
        font-weight: var(--font-weight-medium);
        font-size: var(--text-base-font-size);
        line-height: var(--text-base-line-height);
      }

      .ingress {
        margin: 0;
        max-width: 48rem;
        font-weight: var(--font-weight-extrabold);
        font-size: var(--text-3xl-font-size);
        line-height: var(--text-3xl-line-height);
      }

      .body {
        font-weight: var(--font-weight-normal);
        font-size: var(--text-sm-font-size);
        line-height: var(--text-sm-line-height);
      }
    }
  }

  .flow {
    border-radius: var(--radius-2xl);
    overflow: hidden;

    .background {
      height: 100%;
      background-size: calc(100% + 20px) calc(100% + 20px);
      background-position: -10px -10px;
      background-repeat: no-repeat;

      .content {
        /* Dim the animated background a bit to make the text more readable. */
        height: 100%;
        background-color: var(--color-base-primary-alpha-60);
        color: var(--color-base-background);
      }
    }
  }

  #promise .background {
    background-image: url(/assets/flow-promise.gif);
  }

  #abstract {
    display: grid;
    gap: calc(var(--spacing)*4);

    #mission .background {
      background-image: url(/assets/flow-mission.gif);
    }

    #core-components {
      display: grid;
      gap: calc(var(--spacing) * 4);
      @media (min-width: 40rem) {
        grid-template-columns: 1fr 1fr;
      }
      @media (min-width: 64rem) {
        grid-template-columns: 1fr 1fr 1fr 1fr;
      }

      .component {
        .content {
          padding-block: calc(var(--spacing) * 32);
          padding-inline: calc(var(--spacing) * 8);

          display: grid;
          gap: calc(var(--spacing) * 2);
          text-align: center;

          .title {
            margin: 0;
            font-size: var(--text-base-font-size);
            line-height: var(--text-base-line-height);
            font-weight: var(--font-weight-bold);
          }

          .body {
            margin: 0;
            font-size: var(--text-2xl-font-size);
            line-height: var(--text-2xl-line-height);
            font-weight: var(--font-weight-normal);
          }
        }

        &#simple-setups .background {
          background-image: url(/assets/flow-simple-setups.gif);
        }

        &#insight-driven .background {
          background-image: url(/assets/flow-insight-driven.gif);
        }

        &#always-optimized .background {
          background-image: url(/assets/flow-always-optimized.gif);
        }

        &#change-aware .background {
          background-image: url(/assets/flow-change-aware.gif);
        }
      }
    }
  }

  #status {
    max-width: 40rem;
    border: 2px solid var(--color-base-border);
    display: grid;
    gap: calc(var(--spacing) * 8);

    .text {
      .title {
        margin: 0;
        font-weight: var(--font-weight-semibold);
        font-size: var(--text-base-font-size);
        line-height: var(--text-base-line-height);
      }

      .body {
        color: var(--color-base-muted-foreground);
      }
    }
  }
</style>
