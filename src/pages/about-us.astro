import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import ContactSection from '../components/contact-section.astro';
import Footer from '../components/footer.astro';
import { Picture } from 'astro:assets';
import theTeam from '../assets/team.jpg';
import { waitlistUrl } from '../waitlist';
---

<Layout>
  <Header links={[
    { href: '/', text: 'Close', icon: 'close' },
    { href: waitlistUrl, text: 'Join waitlist', icon: 'arrow', wideOnly: true },
  ]} />
  <main>
    <section>
      <h1>Hello <span aria-hidden="true">ðŸ‘‹</span></h1>

      <Picture
