<style>
  main {
    display: grid;
    gap: calc(var(--spacing)*12);

    section {
      display: grid;
      gap: calc(var(--spacing)*6);

      h1 {
        margin: 0;
        font-size: 2rem;
        font-weight: 800;
        line-height: 1.5rem;
      }

      p {
        margin: 0;
      }

      .emphasis {
        font-weight: var(--font-weight-medium);
      }
    }


    .team {
      border-radius: 0.5rem;
