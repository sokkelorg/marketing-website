---
import Layout from "../layouts/Layout.astro";
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
import LinkButton from "../components/link-button.astro";
---

<Layout>
  <main>
    <div class="content">
      <div class="info">
        <LottieAnimation
          class="stacky-404"
          src="/assets/stacky-404.json"
          autoplay="visible"
        />
        <h1>404 &ndash; Well oh well</h1>
        <p>
          Double-check the address, or let us know at <a
            href="mailto:hello@sokkel.io">hello@sokkel.io</a
          >, and we'll smoooothly guide you back.
        </p>
      </div>
      <LinkButton class="home" href="/">Take me home</LinkButton>
    </div>
  </main>
</Layout>

<style>
  body {
    background-color: white;
  }

  .content {
    margin-inline: auto;
    max-width: 300px;
    height: 100dvh;
    line-height: 1.5rem;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;

    text-align: center;

    .info {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 1.5rem;

      .stacky-404 {
        width: 64px;
        height: 64px;
        border-radius: 8px;
        overflow: hidden;
      }

      h1 {
        margin: 0;
        padding: 0;
        font-size: 16px;
      }

      p {
        margin: 0;
        padding: 0;
      }
    }
  }
</style>
