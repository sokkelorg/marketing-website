---
import Pitch from './pitch.astro';
import logo from '../../public/assets/logo-monochrome.svg?raw';
import background from '../assets/flow-promise.gif';
---

<Pitch
  background={background}
  ingress="Not just a platform. A promise. Smooooth. Worryless. Effortless Software Delivery."
>
  <div slot="title" class="title">
    <Fragment set:html={logo} />
  </div>
</Pitch>

<style>
  .title :global(svg) {
    width: 100%;
    height: 24px;
    @media(min-width: 60rem) {
      height: 32px;
    }
  }
</style>
