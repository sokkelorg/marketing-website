---
import Flow from './flow.astro';
import logo from '../../public/assets/logo-monochrome.svg?raw';
import background from '../assets/flow-promise.gif';
---

<Flow background={background}>
  <div class="pitch">
    <div class="title">
      <Fragment set:html={logo} />
    </div>
    <p class="ingress">
      Not just a platform. A promise.
      <br>
      Smooooth. Worryless.
      <br>
      Effortless Software&nbsp;Delivery.
    </p>
  </div>
</Flow>

<style>
  .pitch {
    padding-block: calc(var(--spacing) * 32);
    padding-inline: calc(var(--spacing) * 6);

    text-align: center;
    display: flex;
    flex-direction: column;
    gap: calc(var(--spacing) * 8);
    align-items: center;

    .title {
      margin: 0;
      line-height: 100%;

      @media (min-width: 60rem) {
        font-size: var(--text-lg-font-size);
      }

      & :global(svg) {
        width: 100%;
        height: 1.5rem;

        @media (min-width: 60rem) {
          height: 2rem;
        }
      }
    }

    .ingress {
      margin: 0;
      max-width: 56.25rem;
      font-weight: var(--font-weight-extrabold);
      line-height: 100%;

      font-size: var(--text-2xl-font-size);
      @media (min-width: 60rem) {
        font-size: var(--text-5xl-font-size);
      }
    }

    .body {
      margin: 0;
      max-width: 38.875rem;

      font-size: var(--text-sm-font-size);
      line-height: var(--text-sm-line-height);
      @media (min-width: 60rem) {
        font-size: var(--text-lg-font-size);
        line-height: var(--text-lg-line-height);
      }
    }
  }
</style>
