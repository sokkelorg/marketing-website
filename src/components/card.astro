---
const { emoji, title } = Astro.props;
---

<article>
  <header>
    <h2>
      <span aria-hidden="true" set:text={emoji} />
      {title}
    </h2>
  </header>
  <div class="content">
    <slot />
  </div>
</article>

<style>
  article {
    background-color: hsl(0, 0%, 96%);
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin-block-end: 1.5rem;
    box-shadow: 0;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
    isolation: isolate;
    position: relative;
  }

  header {
    margin-block-end: 1rem;
  }

  h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: hsl(0, 0%, 20%);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    line-height: 1.3;
  }

  h2 span {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .content {
    font-size: 0.95rem;
    line-height: 1.5;
    color: hsl(0, 0%, 33%);
  }

  @media (prefers-reduced-motion: reduce) {
    article {
      transition: none;
    }

    article:hover {
      transform: none;
    }
  }
</style>
