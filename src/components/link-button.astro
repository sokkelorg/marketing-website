---
export type Props = {
  href: string;
  wide?: true;
};

const { href, wide = false } = Astro.props;
---

<a href={href} class:list={['link-button', { wide }]}><slot /></a>

<style>
  a {
    width: fit-content;
    padding: 10px 16px;
    line-height: 1.5rem;
    font-size: 14px;
    font-weight: 500;
    text-align: center;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    text-decoration: none;
    user-select: none;

    background-color: #000000;
  }

  a:hover {
    background-color: #262626;
  }

  a.wide {
    width: auto;
  }
</style>
